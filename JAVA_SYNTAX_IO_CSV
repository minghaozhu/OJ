package CSV;
import java.io.BufferedReader; 
import java.io.FileReader; 
import java.io.BufferedWriter; 
import java.io.File; 
import java.io.FileWriter;
import java.util.*;



public class CSV { 
	public static void write(List<List<String>> contents, String path, Boolean append){
		try { 
		      File csv = new File(path); 
		      BufferedWriter bw = new BufferedWriter(new FileWriter(csv, append)); // true for append, false for create a new csv
		      // 添加新的数据行
		      for(List<String> line : contents){
		    	  for(int i = 0; i < line.size()-1; i++){
		    		  bw.write(line.get(i)+ ",");
		    	  }
		    	  bw.write(line.get(line.size()-1));
		    	  bw.newLine(); 
		      }
		      bw.close(); 
		    } catch (Exception e) { 
	            e.printStackTrace(); 
	        } 
	}
	public static List<List<String>> read(String path, boolean skipFirstLine){
		List<List<String>> result = new ArrayList<List<String>>();
		try { 
            BufferedReader reader = new BufferedReader(new FileReader(path));
            if(skipFirstLine) {
            	reader.readLine();
            }
            String line = null; 
            while((line=reader.readLine())!=null){ 
            	//System.out.println(line);
                String item[] = line.split(",");// split by comma
                result.add(Arrays.asList(item));
            } 
            reader.close();
        } catch (Exception e) { 
            e.printStackTrace(); 
        } 
		return result;
	}
	public static void main(String[] args) { 
		String path1 = "C:/Users/Shazhu/Desktop/Java/CSVwriter.csv";
		String path2 = "C:/Users/Shazhu/Desktop/Java/CSVwriter2.csv";
		List<List<String>> result = read(path1, false);
		write(result, path2, false);
		for( List<String> line :result){
			for(String word: line){
				System.out.println(word);
			}
		}
	} 
}
